{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "rootDir": "../"
  },
  "include": [
    "typings/**/*.d.ts",
    "../typings/**/*.d.ts",

    "server/**/*.ts",
    "api/**/*.ts",
    "layouts/**/*.vue",
    "components/**/*.vue",
    "pages/**/*.vue",
    "pages/**/*.ts",
    
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
